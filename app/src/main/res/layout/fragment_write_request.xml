<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sahilpaudel.app.advocatus.fragments.WriteRequestFragment"
    android:background="@drawable/background_all_pages">

    <TextView
        android:hint="ASK FOR HELP"
        android:textSize="20dp"
        android:id="@+id/textDisplay"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="center_horizontal"
        android:typeface="sans"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        />
    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/requestCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/textDisplay"
        android:textColorHint="#05ab9a"
         />
    <EditText
        android:id="@+id/writepost"
        android:hint="Details..."
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/requestCategory"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:background="@drawable/rounded_corners"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/writepost"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/linear1"
        android:layout_marginTop="16dp">

        <EditText
            android:hint="Start Date"
            android:focusable="false"
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"/>
        <EditText
            android:hint="End Date"
            android:focusable="false"
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>

    <Button
        android:layout_below="@+id/linear1"
        android:id="@+id/buttonSubmit"
        android:text="SUBMIT"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_color"/>

</RelativeLayout>
